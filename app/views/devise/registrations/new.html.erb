<%= content_for :title, t('create') %>

<div class="login_container">
  <h1 style="font-size: 30px; color: #4e4e51;"><%= t('create') %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %> 
    <div style="display: flex; flex-direction: column; gap: 24px;">
      <div style="display: flex; flex-direction: column; gap: 8px;">
        <%= f.label :name, t('name') %>
        <%= f.text_field :name, autofocus: true %>  
      </div>

      <div style="display: flex; flex-direction: column; gap: 8px;">
        <%= f.label :username, t('username') %>
        <%= f.text_field :username, autofocus: true %>  
      </div>

      <div style="display: flex; flex-direction: column; gap: 8px;">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>  
      </div>

      <div style="display: flex; flex-direction: column; gap: 4px;">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <i>(<%= t('minimum_password_length', count: @minimum_password_length) %>)</i>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div style="display: flex; flex-direction: column; gap: 8px;">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password" %>  
      </div>

      <div class="actions">
        <%= f.submit t('sign_up') %>
      </div>
    </div>
  <% end %>
</div>