<%= content_for :title, t('change_password') %>

<div class="login_container">

  <h2 style="font-size: 30px; color: #4e4e51;"><%= t('change_password') %></h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>  
    
    <div style="<%= form_container_styles %>">
      <div style="display: flex; flex-direction: column; gap: 8px;">
        <%= f.label :password, t("new_password") %>
        <% if @minimum_password_length %>
          <em>(<%= t('minimum_password_length', count: @minimum_password_length) %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "width: 100%" %>                                                  
      </div>

      <div style="display: flex; flex-direction: column; gap: 8px;">
        <%= f.label :password_confirmation, t("confirm_password") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>      

      <div class="actions">
        <%= f.submit t("change") %>
      </div>
    </div>
  <% end %>
</div>
